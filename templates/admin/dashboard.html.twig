{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard — universellecellule{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 fw-bold mb-1">Admin Dashboard</h1>
            <p class="text-muted small mb-0">Manage cases and moderation</p>
        </div>
        <div>
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-outline-primary me-2">Manage Categories</a>
            <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-primary">Manage Events</a>
        </div>
    </div>

    {# KPI Cards #}
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-label">Total Cases</div>
                <div class="kpi-value">{{ totalCases|default(0) }}</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-label">Urgent</div>
                <div class="kpi-value">{{ urgentCases|default(0) }}</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-label">Donations (MAD)</div>
                <div class="kpi-value">{{ totalDonations|default(0) }}</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-label">Pending</div>
                <div class="kpi-value text-warning">{{ pendingCases is defined ? pendingCases|length : 0 }}</div>
            </div>
        </div>
    </div>

    {# Pending Cases Table #}
    <div class="card miaza-card">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2"></i>Pending Cases</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Publisher</th>
                        <th>Created</th>
                        <th>Urgent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for caseSocial in pendingCases|default([]) %}
                        <tr>
                            <td>
                                <strong>{{ caseSocial.title }}</strong>
                                <br><small class="text-muted">{{ caseSocial.description|striptags|slice(0, 80) }}{% if caseSocial.description|length > 80 %}…{% endif %}</small>
                            </td>
                            <td><small>{{ caseSocial.publisher.email|default('—') }}</small></td>
                            <td><small>{{ caseSocial.createdAt|date('M d, Y H:i') }}</small></td>
                            <td>
                                {% if caseSocial.isUrgent() %}
                                    <span class="badge-urgent">Yes</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">No</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_case_social_show', {id: caseSocial.id}) }}"><i class="bi bi-eye"></i></a>
                                    <form method="post" action="{{ path('app_admin_case_approve', {id: caseSocial.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ caseSocial.id) }}">
                                        <button class="btn btn-sm btn-success" type="submit" title="Approve"><i class="bi bi-check-lg"></i></button>
                                    </form>
                                    <form method="post" action="{{ path('app_admin_case_reject', {id: caseSocial.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ caseSocial.id) }}">
                                        <button class="btn btn-sm btn-danger" type="submit" title="Reject"><i class="bi bi-x-lg"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="empty-state py-0 border-0">
                                    <i class="bi bi-check-circle text-success display-4 mb-2"></i>
                                    <p class="text-muted mb-0">No pending cases. All cases are moderated!</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
