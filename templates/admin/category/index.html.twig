{% extends 'base.html.twig' %}

{% block title %}Categories — Admin{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 fw-bold mb-1">Categories</h1>
            <p class="text-muted small mb-0">Manage categories for cases</p>
        </div>
             <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">New Category</a>

    </div>

    <div class="card miaza-card">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Cases</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.name }}</td>
                            <td>{{ categorie.slug|default('—') }}</td>
                            <td>{{ categorie.cases|length }}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_admin_category_edit', {id: categorie.id}) }}"><i class="bi bi-pencil"></i></a>
                                <form method="post" action="{{ path('app_admin_category_delete', {id: categorie.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                    <button class="btn btn-sm btn-danger" type="submit"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4">No categories yet.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
