{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card p-4">
        <h3 class="mb-4">{{ button_label is defined ? 'Edit Category' : 'Create Category' }}</h3>

        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="d-flex justify-content-end gap-2">
            {{ form_rest(form) }}
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-outline-secondary">Cancel</a>
            <button class="btn btn-primary" type="submit">{{ button_label|default('Save Category') }}</button>
        </div>
    </div>
{{ form_end(form) }}
