{% extends 'base.html.twig' %}

{% block title %}Cases — universellecellule{% endblock %}

{% block body %}
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="h4 fw-bold mb-0">Cases Directory</h1>
            <small class="text-muted">Find verified social initiatives to support</small>
        </div>
        {% if is_granted('ROLE_ASSOC') %}
            <a href="{{ path('app_case_social_new') }}" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i>New Case</a>
        {% endif %}
    </div>

    {# Search & Filters #}
    <div class="card miaza-card mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_case_social_index') }}" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Search</label>
                        <input name="q" class="form-control" placeholder="Search cases, keywords, locations" aria-label="Search" value="{{ app.request.query.get('q', '') }}">
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                            {% if categories is defined and categories|length > 0 %}
                                <div>
                                    <label class="form-label small text-muted">Category</label>
                                    <select class="form-select form-select-sm" style="min-width: 140px;" name="category" onchange="this.form.submit()">
                                        <option value="">All categories</option>
                                        {% for c in categories %}
                                            <option value="{{ c.id }}" {{ app.request.query.get('category') == (c.id ~ '') ? 'selected' : '' }}>{{ c.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            {% endif %}
                            <div>
                                <label class="form-label small text-muted">Sort</label>
                                <select class="form-select form-select-sm" style="min-width: 140px;" name="sort" onchange="this.form.submit()">
                                    <option value="">Latest</option>
                                    <option value="views" {{ app.request.query.get('sort') == 'views' ? 'selected' : '' }}>Most viewed</option>
                                    <option value="urgent" {{ app.request.query.get('sort') == 'urgent' ? 'selected' : '' }}>Urgent first</option>
                                </select>
                            </div>
                            <div class="align-self-end">
                                <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% set items = cases is defined ? cases : (caseSocials is defined ? caseSocials : []) %}

    {% if items is empty %}
        <div class="empty-state">
            <i class="bi bi-search empty-icon d-block"></i>
            <p class="text-muted mb-3">No cases match your search.</p>
            {% if is_granted('ROLE_ASSOC') %}
                <a href="{{ path('app_case_social_new') }}" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Create a case</a>
            {% endif %}
        </div>
    {% else %}
        <div class="row g-4">
            {% for caseSocial in items %}
                <div class="col-sm-6 col-lg-4">
                    <div class="card miaza-card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0 fw-bold">{{ caseSocial.title }}</h5>
                                {% if caseSocial.isUrgent() %}
                                    <span class="badge-urgent">Urgent</span>
                                {% endif %}
                            </div>
                            <span class="badge-category mb-2">{{ caseSocial.categorie.name|default('General') }}</span>
                            <p class="card-text text-muted small flex-grow-1">{{ caseSocial.description|striptags|slice(0, 110) }}{% if caseSocial.description|length > 110 %}…{% endif %}</p>
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-2">
                                <small class="text-muted"><i class="bi bi-eye me-1"></i>{{ caseSocial.viewsCount|default(0) }}</small>
                                <a href="{{ path('app_case_social_show', {id: caseSocial.id}) }}" class="btn btn-sm btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination placeholder #}
        <nav aria-label="Cases pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled"><span class="page-link">«</span></li>
                <li class="page-item active"><span class="page-link">1</span></li>
                <li class="page-item disabled"><span class="page-link">»</span></li>
            </ul>
        </nav>
    {% endif %}
{% endblock %}
