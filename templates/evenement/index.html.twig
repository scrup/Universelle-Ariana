{% extends 'base.html.twig' %}

{% block title %}Events — universellecellule{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 fw-bold mb-0">Events</h1>
            <p class="text-muted small mb-0">Upcoming events and activities</p>
        </div>
        {% if is_granted('ROLE_ASSOC') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_evenement_new') }}" class="btn btn-primary">New Event</a>
        {% endif %}
    </div>

    {% if events is empty %}
        <div class="empty-state text-center py-5">
            <i class="bi bi-calendar-event display-4 text-muted mb-2"></i>
            <p class="text-muted">No events scheduled yet.</p>
        </div>
    {% else %}
        <div class="row g-4">
            {% for event in events %}
                <div class="col-md-6 col-lg-4">
                    <div class="card miaza-card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold mb-2">{{ event.title }}</h5>
                            <div class="text-muted small mb-2">{{ event.startAt|date('M d, Y H:i') }} • {{ event.location|default('Online') }}</div>
                            <p class="text-muted small flex-grow-1">{{ event.description|striptags|slice(0, 120) }}{% if event.description and event.description|length > 120 %}…{% endif %}</p>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_evenement_show', {id: event.id}) }}">View</a>
                                {% if is_granted('ROLE_ADMIN') or (app.user and event.createdBy and app.user == event.createdBy) %}
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_evenement_edit', {id: event.id}) }}"><i class="bi bi-pencil"></i></a>
                                        <form method="post" action="{{ path('app_evenement_delete', {id: event.id}) }}" class="d-inline" onsubmit="return confirm('Delete this event?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                            <button class="btn btn-sm btn-danger" type="submit"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
