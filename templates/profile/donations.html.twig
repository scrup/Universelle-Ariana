{% extends 'base.html.twig' %}

{% block title %}My Donations{% endblock %}

{% block body %}
    <h1 class="mb-4">My Donation History</h1>

    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6 class="card-title">Total Declared</h6>
                    <div class="display-6">
                        {% set total = donations|map(d => d.amount)|reduce((c, i) => c + (i ?? 0), 0) %}
                        {{ total|number_format(2, '.', ',') }}
                    </div>
                    <small class="text-muted">MAD</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6 class="card-title">Donations</h6>
                    <div class="display-6">{{ donations|length }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">Donation Records</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Case</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for donation in donations %}
                        <tr>
                            <td>
                                <a href="{{ path('app_case_social_show', {id: donation.caseSocial.id}) }}">
                                    {{ donation.caseSocial.title }}
                                </a>
                            </td>
                            <td>
                                <strong>{{ donation.amount }} MAD</strong>
                            </td>
                            <td>
                                {% if donation.status == 'DECLARED' %}
                                    <span class="badge bg-info">Declared</span>
                                {% elseif donation.status == 'CONFIRMED' %}
                                    <span class="badge bg-success">Confirmed</span>
                                {% else %}
                                    <span class="badge bg-warning">{{ donation.status }}</span>
                                {% endif %}
                            </td>
                            <td>{{ donation.donatedAt|date('M d, Y') }}</td>
                            <td>
                                {% if donation.note %}
                                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="{{ donation.note }}">
                                        üí¨
                                    </button>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <p>You haven't made any donations yet.</p>
                                <a href="{{ path('app_case_social_index') }}" class="btn btn-sm btn-primary">Browse Cases</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_case_social_index') }}" class="btn btn-outline-primary">‚Üê Back to Cases</a>
    </div>
{% endblock %}
