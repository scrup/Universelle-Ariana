<!DOCTYPE html>
<html lang="{{ app.request.locale ?: 'en' }}" dir="{{ app.request.locale == 'ar' ? 'rtl' : 'ltr' }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ 'home.title'|trans }}{% endblock %}</title>
    <meta name="description" content="{{ 'home.title'|trans }}">

    {# Bootstrap 5 CSS (CDN) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    {# Your CSS #}
    <link rel="stylesheet" href="{{ asset('assets/app.css') }}">

    {% block stylesheets %}{% endblock %}
</head>

<body class="miaza-body bg-light d-flex flex-column min-vh-100">

    {# Skip link for accessibility #}
    <a class="visually-hidden-focusable miaza-skip-link" href="#content">
        Skip to content
    </a>


    {# NAVBAR #}
    <nav id="main-navbar" class="navbar navbar-expand-lg miaza-navbar fixed-top" role="navigation" aria-label="Main navigation">
        <div class="container-fluid px-3 px-lg-4">
            <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('app_homepage') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Universelle Cellule" height="52">
                <span class="fw-bold miaza-brand-text d-none d-sm-inline">Universelle Cellule</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_homepage') }}">{{ 'home.title'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_case_social_index') }}">{{ 'nav.cases'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_evenement_index') }}">{{ 'nav.events'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">{{ 'nav.contact'|trans }}</a>
                    </li>
                </ul>

                <ul class="navbar-nav mb-2 mb-lg-0 align-items-lg-center">
                    {% if app.user %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_dashboard') }}">
                                    <i class="bi bi-speedometer2 me-1"></i> Admin
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_category_index') }}">
                                    <i class="bi bi-tags me-1"></i> Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_stats_donations_by_case') }}">
                                    <i class="bi bi-graph-up me-1"></i> Stats
                                </a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ASSOC') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_case_social_new') }}">
                                    <i class="bi bi-plus-circle me-1"></i> Create Case
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_association_dashboard') }}">
                                    <i class="bi bi-folder2-open me-1"></i> My Cases
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_stats_donations_by_case') }}">
                                    <i class="bi bi-graph-up me-1"></i> Stats
                                </a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_DONATEUR') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_profile_donations') }}">
                                    <i class="bi bi-heart me-1"></i> My Donations
                                </a>
                            </li>
                        {% endif %}

                        {% if not is_granted('ROLE_ADMIN') and not is_granted('ROLE_ASSOC') and not is_granted('ROLE_DONATEUR') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_profile_donations') }}">
                                    <i class="bi bi-person-circle me-1"></i> Dashboard
                                </a>
                            </li>
                        {% endif %}

                        <li class="nav-item ms-lg-2">
                            <form method="post" action="{{ path('app_logout') }}" class="d-inline">
                                <button type="submit" class="btn btn-sm miaza-btn-soft">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </button>
                            </form>
                        </li>

                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                        </li>
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-sm btn-primary" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        </li>
                    {% endif %}

                    <li class="nav-item dropdown ms-lg-2">
                        <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-translate me-1"></i>{{ app.request.locale|upper }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                            <li><a class="dropdown-item" href="{{ path('app_set_locale', {'locale':'en'}) }}">English</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_set_locale', {'locale':'fr'}) }}">Français</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_set_locale', {'locale':'ar'}) }}">العربية</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {# MAIN (content separated from header) #}
    <main id="content" class="{% block main_class %}container container-lg{% endblock %} flex-grow-1 miaza-main">
        <div class="miaza-page-shell">

            {# Flash messages (nice UI) #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} miaza-alert shadow-sm" role="alert">
                        <div class="d-flex align-items-start gap-2">
                            <i class="bi bi-info-circle mt-1"></i>
                            <div class="flex-grow-1">{{ message }}</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </main>

    {# FOOTER #}
    <footer class="miaza-footer mt-auto">
        <div class="container py-5">
            <div class="row gy-4">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-2">
                        <i class="bi bi-heart-fill me-2"></i>universellecellule
                    </h5>
                    <p class="small mb-0 opacity-75">
                        Connecting donors with verified social causes. Transparent, secure, community-first.
                    </p>
                </div>

                <div class="col-6 col-md-2">
                    <h6 class="mb-2 opacity-75">{{ 'footer.explore'|trans }}</h6>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-1"><a class="miaza-footer-link" href="{{ path('app_case_social_index') }}">{{ 'nav.cases'|trans }}</a></li>
                        <li class="mb-1"><a class="miaza-footer-link" href="{{ path('app_evenement_index') }}">{{ 'nav.events'|trans }}</a></li>
                        <li class="mb-1"><a class="miaza-footer-link" href="{{ path('app_homepage') }}">{{ 'home.title'|trans }}</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2">
                    <h6 class="mb-2 opacity-75">{{ 'footer.resources'|trans }}</h6>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-1"><a class="miaza-footer-link" href="#">{{ 'footer.about'|trans }}</a></li>
                        <li class="mb-1"><a class="miaza-footer-link" href="{{ path('app_how_discover') }}">{{ 'how.title'|trans }}</a></li>
                        <li class="mb-1"><a class="miaza-footer-link" href="{{ path('app_contact') }}">{{ 'nav.contact'|trans }}</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h6 class="mb-2 opacity-75">Contact</h6>
                    <p class="small mb-1 opacity-75">
                        <i class="bi bi-envelope me-1"></i>
                        <a class="miaza-footer-link" href="mailto:universellecelluleariana@gmail.com">universellecelluleariana@gmail.com</a>
                    </p>
                    <p class="small mb-0 opacity-75">
                        <i class="bi bi-telephone me-1"></i>+212 5XX XXX XXX
                    </p>
                    <p class="small mt-2 mb-0">
                        <a class="miaza-footer-link" href="{{ path('app_contact') }}">Contact us</a>
                    </p>
                </div>
            </div>

            <hr class="border-light opacity-25 my-4">
            <div class="text-center small opacity-75">
                {{ 'footer.copy'|trans({'%year%': "now"|date('Y')}) }}
            </div>
        </div>
    </footer>

    {# Bootstrap JS bundle (CDN) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {# Auto-fix spacing below fixed navbar #}
    <script>
        (function () {
            const nav = document.getElementById('main-navbar');
            if (!nav) return;

            function applyOffset() {
                const h = nav.getBoundingClientRect().height || 0;
                document.documentElement.style.setProperty('--miaza-nav-h', h + 'px');
            }

            applyOffset();
            window.addEventListener('resize', applyOffset);

            // When navbar collapse expands/collapses (mobile), update again
            document.addEventListener('shown.bs.collapse', applyOffset);
            document.addEventListener('hidden.bs.collapse', applyOffset);
        })();
    </script>

    {% block javascripts %}{% endblock %}

    {# Your scripts #}
    <script src="{{ asset('js/a11y-menu.js') }}"></script>

    {# Head + Blink navigation (camera) #}
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/face_mesh.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.min.js"></script>
    <script src="{{ asset('js/head-mouse.js') }}"></script>
</body>
<script>
  (function () {
    const nav = document.querySelector('.miaza-navbar');
    if (!nav) return;

    function setNavHeight() {
      const h = nav.getBoundingClientRect().height || 200;
      document.documentElement.style.setProperty('--nav-h', h + 'px');

    }

    setNavHeight();
    window.addEventListener('resize', setNavHeight);
    document.addEventListener('shown.bs.collapse', setNavHeight);
    document.addEventListener('hidden.bs.collapse', setNavHeight);
  })();
</script>

</html>
